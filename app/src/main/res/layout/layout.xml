<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플랜 이름"

            ></TextView>

        <EditText
            android:id="@+id/ed_add_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="    ex) 패밀리"

            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   총 가격"
            ></TextView>

        <EditText
            android:id="@+id/ed_add_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="    ex) 47000"

            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제 날짜"
            ></TextView>

        <EditText
            android:id="@+id/ed_add_paydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="    ex) 매달 xx일"
            ></EditText>
    </LinearLayout>
</LinearLayout>